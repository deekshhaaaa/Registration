<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Registration.AddCatPage"
             Title="New Category">
    <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,*">
        
        <Entry x:Name="txtCatName" Placeholder="Name" Grid.Row="0" 
                HeightRequest="50" Grid.ColumnSpan="2"/>
        
        <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked"
                BackgroundColor="DarkSeaGreen" HeightRequest="50"
                Grid.Row="1" Grid.Column="0"/>
        
        <Button x:Name="btnDelete" Text="Delete" Clicked="btnDelete_Clicked"
                BackgroundColor="IndianRed" HeightRequest="50" 
                Grid.Row="1" Grid.Column="1" IsVisible="False"/>
    </Grid>
</ContentPage>