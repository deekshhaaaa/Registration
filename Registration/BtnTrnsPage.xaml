<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Registration.BtnTrnsPage"
             Title="BtnTrnsPage">
    <FlexLayout>
        <Entry
            x:Name="txtAmt"
            Placeholder="Enter Amount"/>
        <Button
            x:Name="btnSave"
            Text="Save"/>
        <ListView 
            x:Name="lstTransaction">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout>
                            <Label Text="Name Here"/>
                            <Grid ColumnDefinitions="auto,auto,auto">
                                <Label Text="Amount Here" Grid.Column="0" BackgroundColor="Red"/>
                                <Label Text="Credit or Debit here" Grid.Column="1" BackgroundColor="Yellow"/>
                                <Label Text="Date here" Grid.Column="2"/>
                            </Grid>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </FlexLayout>
</ContentPage>