<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Registration.BtnTrnsPage"
             Title="BtnTrnsPage">
    <Grid RowDefinitions="*,6*,*" ColumnDefinitions="*" Padding="10" RowSpacing="10">
        <Entry
            x:Name="txtAmt"
            Placeholder="Enter Amount"
            Grid.Row="0"/>
        <Button
            x:Name="btnSave"
            Text="Save"
            Grid.Row="2"/>
        <ListView 
            x:Name="lstTransaction"
            Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout>
                            <Label Text="Name Here"/>
                            <Grid ColumnDefinitions="auto,auto,auto">
                                <Label Text="Amount Here" Grid.Column="0" BackgroundColor="Red"/>
                                <Label Text="Credit or Debit here" Grid.Column="1" BackgroundColor="Yellow"/>
                                <Label Text="Date here" Grid.Column="2"/>
                            </Grid>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>